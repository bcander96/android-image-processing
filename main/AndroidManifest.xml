<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.bande.csc3002app">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".StartupScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".MainScreen"
            android:noHistory="true"/>
        <activity android:name=".CorrelationScreen"/>
        <activity android:name=".CorrelationResultsScreen"
            android:noHistory="true"/>
        <activity android:name=".AdjustImageScreen"
            android:noHistory="true"/>
        <activity android:name=".ImagePropertiesScreen"
            android:noHistory="true"/>
        <activity android:name=".RGBScreen"
            android:noHistory="true"/>
        <activity android:name=".FiltersScreen"
            android:noHistory="true"/>

    </application>

</manifest>